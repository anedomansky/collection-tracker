{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
    },
    "include": [
        "main/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
