{
  "name": "collection-tracker",
  "version": "1.0.0",
  "private": true,
  "author": "Alexander Nedomansky <anedomansky@googlemail.com>",
  "description": "Electron, Vue, SQLite app",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build && tsc --skipLibCheck --p ./tsconfig.electron.json",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "dist": "electron-builder",
    "electron:compile": "tsc --skipLibCheck --p ./tsconfig.electron.json && electron .",
    "electron:start": "cross-env NODE_ENV=dev nodemon",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anedomansky/collection-tracker.git"
  },
  "main": "./dist/electron.js",
  "dependencies": {
    "@types/sqlite3": "^3.1.6",
    "core-js": "^3.6.5",
    "electron-unhandled": "^3.0.2",
    "isomorphic-fetch": "^3.0.0",
    "sqlite3": "^5.0.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.19",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "^4.5.8",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-0",
    "cross-env": "^7.0.2",
    "electron": "^22.3.25",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "node-sass": "^4.12.0",
    "nodemon": "^2.0.5",
    "sass-loader": "^8.0.2",
    "typescript": "~3.9.3",
    "vue-jest": "^5.0.0-0"
  },
  "build": {
    "appId": "collection-tracker",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": "dmg",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "deb",
      "publish": [
        "github"
      ]
    }
  },
  "license": "MIT"
}
